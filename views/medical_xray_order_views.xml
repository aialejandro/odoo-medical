<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- X-ray Order Form View -->
    <record id="view_medical_xray_order_form" model="ir.ui.view">
        <field name="name">medical.xray.order.form</field>
        <field name="model">medical.xray.order</field>
        <field name="arch" type="xml">
            <form string="X-ray Order">
                <header>
                    <button name="action_confirm" type="object" string="Confirm" class="oe_highlight" invisible="state != 'draft'"/>
                    <button name="action_start" type="object" string="Start Process" class="oe_highlight" invisible="state != 'confirmed'"/>
                    <button name="action_done" type="object" string="Mark as Done" class="oe_highlight" invisible="state != 'in_progress'"/>
                    <button name="action_create_invoice" type="object" string="Create Invoice" class="btn-primary" invisible="state != 'done' or invoice_id"/>
                    <button name="action_view_invoice" type="object" string="View Invoice" class="btn-secondary" invisible="not invoice_id"/>
                    <button name="action_cancel" type="object" string="Cancel" invisible="state in ['done', 'cancelled']"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,in_progress,done"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_invoice" type="object" class="oe_stat_button" icon="fa-pencil-square-o" invisible="not invoice_id">
                            <div class="o_stat_info">
                                <field name="invoice_state"/>
                                <span class="o_stat_text">Invoice</span>
                            </div>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="patient_id" options="{'no_create': True}"/>
                            <field name="date"/>
                        </group>
                        <group>
                            <field name="total_price" widget="monetary"/>
                            <field name="company_id" invisible="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="X-ray Lines" name="xray_lines">
                            <field name="line_ids">
                                <list editable="bottom">
                                    <field name="sequence" widget="handle"/>
                                    <field name="area_id"/>
                                    <field name="projection_type"/>
                                    <field name="price" sum="Total Price"/>
                                    <field name="image_count" string="Images"/>
                                </list>
                                <form>
                                    <sheet>
                                        <group>
                                            <group>
                                                <field name="area_id"/>
                                                <field name="projection_type"/>
                                                <field name="price"/>
                                            </group>
                                            <group>
                                                <field name="sequence"/>
                                                <field name="image_count" readonly="1"/>
                                            </group>
                                        </group>
                                        <group string="X-ray Images">
                                            <field name="images" widget="many2many_binary" nolabel="1"/>
                                        </group>
                                    </sheet>
                                </form>
                            </field>
                        </page>
                        <page string="Invoice Settings" name="invoice_settings">
                            <group>
                                <group>
                                    <field name="journal_id"/>
                                    <field name="product_id"/>
                                    <field name="tax_id"/>
                                </group>
                                <group>
                                    <field name="invoice_id" readonly="1"/>
                                    <field name="invoice_state" readonly="1"/>
                                </group>
                            </group>
                        </page>
                        <page string="Notes" name="notes">
                            <field name="notes" placeholder="Additional notes for this X-ray order..."/>
                        </page>
                    </notebook>
                </sheet>
                <chatter reload_on_attachment="True"/>
            </form>
        </field>
    </record>

    <!-- X-ray Order Tree View -->
    <record id="view_medical_xray_order_tree" model="ir.ui.view">
        <field name="name">medical.xray.order.tree</field>
        <field name="model">medical.xray.order</field>
        <field name="arch" type="xml">
            <list string="X-ray Orders" decoration-info="state == 'draft'" decoration-warning="state == 'confirmed'" decoration-success="state == 'done'">
                <field name="name"/>
                <field name="patient_id"/>
                <field name="date"/>
                <field name="total_price" sum="Total Amount"/>
                <field name="state" widget="badge" decoration-info="state == 'draft'" decoration-warning="state in ['confirmed', 'in_progress']" decoration-success="state == 'done'"/>
                <field name="invoice_state" optional="hide"/>
            </list>
        </field>
    </record>

    <!-- X-ray Order Search View -->
    <record id="view_medical_xray_order_search" model="ir.ui.view">
        <field name="name">medical.xray.order.search</field>
        <field name="model">medical.xray.order</field>
        <field name="arch" type="xml">
            <search string="X-ray Orders">
                <field name="name"/>
                <field name="patient_id"/>
                <field name="date"/>
                <separator/>
                <filter name="draft" string="Draft" domain="[('state', '=', 'draft')]"/>
                <filter name="confirmed" string="Confirmed" domain="[('state', '=', 'confirmed')]"/>
                <filter name="in_progress" string="In Progress" domain="[('state', '=', 'in_progress')]"/>
                <filter name="done" string="Done" domain="[('state', '=', 'done')]"/>
                <separator/>
                <filter name="invoiced" string="Invoiced" domain="[('invoice_id', '!=', False)]"/>
                <filter name="not_invoiced" string="Not Invoiced" domain="[('invoice_id', '=', False)]"/>
                <separator/>
                <filter name="today" string="Today" domain="[('date', '>=', datetime.datetime.combine(context_today(), datetime.time(0,0,0))), ('date', '&lt;', datetime.datetime.combine(context_today() + datetime.timedelta(days=1), datetime.time(0,0,0)))]"/>
                <filter name="this_week" string="This Week" domain="[('date', '>=', (context_today() - datetime.timedelta(weeks=1)).strftime('%Y-%m-%d'))]"/>
                <filter name="this_month" string="This Month" domain="[('date', '>=', (context_today().replace(day=1)).strftime('%Y-%m-%d'))]"/>
                <group expand="0" string="Group By">
                    <filter name="group_patient" string="Patient" domain="[]" context="{'group_by': 'patient_id'}"/>
                    <filter name="group_state" string="State" domain="[]" context="{'group_by': 'state'}"/>
                    <filter name="group_date" string="Date" domain="[]" context="{'group_by': 'date:day'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- X-ray Order Action -->
    <record id="action_medical_xray_order" model="ir.actions.act_window">
        <field name="name">X-ray Orders</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">medical.xray.order</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="view_medical_xray_order_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first X-ray order!
            </p>
            <p>
                X-ray orders allow you to manage patient X-ray requests,
                including the specific areas to be X-rayed and their pricing.
            </p>
        </field>
    </record>
</odoo>
