<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Medical Treatment Views -->
    <record id="view_medical_treatment_tree" model="ir.ui.view">
        <field name="name">medical.treatment.tree</field>
        <field name="model">medical.treatment</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="code"/>
                <field name="price"/>
                <field name="session_count"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <record id="view_medical_treatment_form" model="ir.ui.view">
        <field name="name">medical.treatment.form</field>
        <field name="model">medical.treatment</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_sessions" 
                                type="object" 
                                class="oe_stat_button" 
                                icon="fa-calendar"
                                invisible="session_count == 0">
                            <field name="session_count" widget="statinfo" string="Sessions"/>
                        </button>
                        <button name="action_view_therapies" 
                                type="object" 
                                class="oe_stat_button" 
                                icon="fa-stethoscope"
                                invisible="therapy_count == 0">
                            <field name="therapy_count" widget="statinfo" string="Therapies"/>
                        </button>
                    </div>
                    <widget name="web_ribbon" title="Archived" bg_color="bg-danger" invisible="active"/>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Treatment name..."/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="code"/>
                            <field name="total_estimated_duration"/>
                        </group>
                        <group>
                            <field name="active"/>
                            <field name="price"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description" name="description">
                            <field name="description" placeholder="Add treatment description..."/>
                        </page>
                        <page string="Objectives" name="objectives">
                            <field name="objectives" placeholder="Define treatment objectives..."/>
                        </page>
                        <page string="Contraindications" name="contraindications">
                            <field name="contraindications" placeholder="List contraindications..."/>
                        </page>
                        <page string="Sessions" name="sessions">
                            <field name="session_ids">
                                <list default_order="sequence">
                                    <field name="sequence" widget="handle"/>
                                    <field name="name"/>
                                    <field name="component_count"/>
                                    <field name="estimated_duration"/>
                                    <field name="active"/>
                                </list>
                            </field>
                        </page>
                        <page string="Related Therapies" name="therapies" invisible="therapy_count == 0">
                            <field name="therapy_ids">
                                <list>
                                    <field name="name"/>
                                    <field name="patient_id"/>
                                    <field name="therapy_date"/>
                                    <field name="state"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_medical_treatment" model="ir.actions.act_window">
        <field name="name">Medical Treatments</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">medical.treatment</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new medical treatment
            </p>
            <p>
                Define treatment protocols with sessions and components for therapy management.
            </p>
        </field>
    </record>
</odoo>
